<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a4_cse_a.alertsandpickers.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alertdialog_text"
        android:layout_gravity="center"
        android:onClick="openAlertDialog"
        android:textSize="45sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/datepicker_text"
        android:layout_gravity="center"
        android:onClick="openDataPickerDialog"
        android:layout_marginTop="150dp"
        android:textSize="45sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timepicker_text"
        android:layout_gravity="center"
        android:onClick="openTimePicker"
        android:layout_marginTop="150dp"
        android:textSize="45sp"/>
</LinearLayout>
